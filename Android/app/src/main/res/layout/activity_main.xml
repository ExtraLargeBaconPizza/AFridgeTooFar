<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/gray2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:onClick="backgroundClicked">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/A_FRIDGE_TOO_FAR"
        style="@style/largeTitleTextView" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="@string/Enter_Delivery_Address"
        android:imeOptions="actionSearch"
        android:outlineProvider="none"
        android:singleLine="true"
        android:theme="@style/autoCompleteTextViewTheme"
        style="@style/autoCompleteTextView" />

    <TextView
        android:id="@+id/addressNotFoundTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        app:layout_constraintTop_toTopOf="@+id/titleTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Address not available on Uber Eats.\nPlease try a different address or app"
        style="@style/addressNotFoundTextView" />

    <TextView
        android:id="@+id/searchingTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginEnd="@dimen/side_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/SEARCHING"
        style="@style/mediumTitleTextView" />

    <TextView
        android:id="@+id/uberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/doorTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="appClicked"
        android:padding="10dp"
        android:text="@string/Uber_Eats"
        style="@style/appSelectionTextView" />

    <TextView
        android:id="@+id/doorTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/skipTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="appClicked"
        android:padding="10dp"
        android:text="@string/DoorDash"
        style="@style/appSelectionTextView" />

    <TextView
        android:id="@+id/skipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toTopOf="@+id/foodTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="appClicked"
        android:padding="10dp"
        android:text="@string/SkipTheDishes"
        style="@style/appSelectionTextView" />

    <TextView
        android:id="@+id/foodTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="appClicked"
        android:padding="10dp"
        android:text="@string/foodora"
        style="@style/appSelectionTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>