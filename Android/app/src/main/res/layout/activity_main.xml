<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/gray2"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:onClick="backgroundClicked">

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/top_margin"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="A\nFRIDGE\nTOO\nFAR"
        style="@style/lightTitleTextView" />

    <AutoCompleteTextView
        android:id="@+id/autoCompleteTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginStart="@dimen/side_margin"
        android:layout_marginEnd="@dimen/side_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:hint="Enter Delivery Address"
        android:imeOptions="actionSearch"
        android:outlineProvider="none"
        android:singleLine="true"
        android:theme="@style/autoCompleteTextViewTheme"
        style="@style/autoCompleteTextView" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/appConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="88dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/uberTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@+id/doorTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="appClicked"
            android:padding="10dp"
            android:text="@string/Uber_Eats"
            style="@style/appSelectionTextView" />

        <TextView
            android:id="@+id/doorTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@+id/skipTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="appClicked"
            android:padding="10dp"
            android:text="DoorDash"
            style="@style/appSelectionTextView" />

        <TextView
            android:id="@+id/skipTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toTopOf="@+id/foodTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="appClicked"
            android:padding="10dp"
            android:text="SkipTheDishes"
            style="@style/appSelectionTextView" />

        <TextView
            android:id="@+id/foodTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="appClicked"
            android:padding="10dp"
            android:text="@string/foodora"
            style="@style/appSelectionTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>