<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <View
        android:id="@+id/loadingBar1View"
        android:layout_width="45dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/loadingBar2View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar2View"
        android:layout_width="35dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/loadingBar3View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar3View"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/loadingBar4View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar4View"
        android:layout_width="15dp"
        android:layout_height="2dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintBottom_toTopOf="@id/loadingBar5View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar5View"
        android:layout_width="8dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar6View"
        android:layout_width="15dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/loadingBar5View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar7View"
        android:layout_width="25dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/loadingBar6View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar8View"
        android:layout_width="35dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/loadingBar7View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

    <View
        android:id="@+id/loadingBar9View"
        android:layout_width="45dp"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/loadingBar8View"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/grayE" />

</androidx.constraintlayout.widget.ConstraintLayout>