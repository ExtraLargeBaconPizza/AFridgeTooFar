<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="largeTitleTextView">
        <item name="android:textSize">30sp</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="android:textColor">@color/grayE</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="mediumTitleTextView" parent="largeTitleTextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="mediumLeftTitleTextView" parent="largeTitleTextView">
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="autoCompleteTextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="android:textColor">@color/grayE</item>
        <item name="android:textColorHighlight">@color/gray4</item>
        <item name="android:textColorHint">@color/grayE</item>
        <item name="backgroundTint">@color/grayE</item>
    </style>

    <style name="autoCompleteTextViewTheme">
        <item name="colorControlNormal">@color/grayE</item>
        <item name="colorControlActivated">@color/grayE</item>
        <item name="colorControlHighlight">@color/grayE</item>
    </style>

    <style name="appSelectionTextView">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="android:textColor">@color/grayE</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="searchSelectionTextView">
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/helveticaneue</item>
        <item name="android:textColor">@color/grayE</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

</resources>
